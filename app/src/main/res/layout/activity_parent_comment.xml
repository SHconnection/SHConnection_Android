<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <EditText
        android:id="@+id/edt_parent_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/parent_comment_hint"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parent_comment_text1"
            />
        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/text1"
            android:layout_toRightOf="@id/text1"
            android:max="20"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar1"
            android:text="@string/parent_comment_text2"
            android:layout_marginTop="15dp"/>
        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/text1"
            android:layout_toEndOf="@+id/text1"
            android:layout_toRightOf="@id/text1"
            android:layout_marginTop="15dp"
            android:max="20"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:text="@string/parent_comment_text3"
            android:layout_marginTop="15dp"/>
        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/text2"
            android:layout_toEndOf="@+id/text1"
            android:layout_toRightOf="@id/text1"
            android:layout_marginTop="15dp"
            android:max="20"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:text="@string/parent_comment_text4"
            android:layout_marginTop="15dp"/>
        <SeekBar
            android:id="@+id/seekBar4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/text3"
            android:layout_toEndOf="@+id/text1"
            android:layout_toRightOf="@id/text1"
            android:layout_marginTop="15dp"
            android:max="20"
            />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text4"
            android:text="@string/parent_comment_text5"
            android:layout_marginTop="15dp"/>

        <SeekBar
            android:id="@+id/seekBar5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/text4"
            android:layout_toEndOf="@+id/text1"
            android:layout_toRightOf="@id/text1"
            android:layout_marginTop="15dp"
            android:max="20"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_send_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="发送"
        android:layout_marginBottom="30dp"/>
</LinearLayout>